<% layout("/layouts/boilerplate") %>
<body>
    <div class="uppersec flex-grow-1 my-3">
        <div class="d-flex align-items-center justify-content-center">
            <div class="flex-grow-1 my-3">
                <h1 class="custom-font">WORKFIT</h1>
            <p class="tagline">"Turn Competition into Celebration" <br>   – A Smarter Way to Host, Play, and Win!</p>
            </div>
            <div class="flex-shrink-0">      
            </div>
        </div>
    </div>
   
    <div class="support my-3 position-relative">
        <!-- Support Content -->
        <div class="d-flex flex-row align-items-stretch mb-3">
            <div class="p-2 flex-fill d-flex justify-content-center align-items-center">
                <a href="/admin" class="card-link">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">ADMIN</h5>
                            <!-- Hidden link text -->
                            <a href="/admin" class="d-none">Admin</a>
                        </div>
                    </div>
                </a>
            </div>
            <div class="p-2 flex-fill d-flex justify-content-center align-items-center">
                <a href="/judge" class="card-link">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">JUDGE</h5>
                            <!-- Hidden link text -->
                            <a href="/judge" class="d-none">Judge</a>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
  
    <div class="facts my-3">
        <h1 class="support-title d-flex justify-content-center align-items-center">REWARDS</h1>
        <div class="d-flex flex-row align-items-stretch mb-3">
            <div class="p-2 flex-fill d-flex justify-content-center align-items-center">
                <div class="card" style="width: 18rem;">
                    <div class="card-body text-center">
                        <div class="icon-container">
                            <i class="fas fa-trophy"></i> <!-- Trophy icon -->
                        </div>
                        <p class="card-text">
                            Custom Trophy or Plaque: A personalized trophy or plaque that can be displayed at the company's office, showcasing the win.
                      Medals or Certificates: Individual medals for participants, along with certificates of achievement.
                        </p>
                    </div>
                </div>
            </div>
            <div class="p-2 flex-fill d-flex justify-content-center align-items-center">
                <div class="card" style="width: 18rem;">
                    <div class="card-body text-center">
                        <div class="icon-container">
                            <i class="fas fa-coins"></i> <!-- Coins icon -->
                        </div>
                        <p class="card-text">
                            A monetary reward that can be shared among team members or used for team-related activities.
                            Bonus or Performance Incentives: Extra bonuses or performance incentives for the winning team members.
                        </p>
                    </div>
                </div>
            </div>
            <div class="p-2 flex-fill d-flex justify-content-center align-items-center">
                <div class="card" style="width: 18rem;">
                    <div class="card-body text-center">
                        <div class="icon-container">
                            <i class="fas fa-award"></i> <!-- Award icon -->
                        </div>
                        <p class="card-text">
                            Online Retail Vouchers
                            Restaurant Vouchers
                            Entertainment Vouchers
                            Travel Vouchers
                            Wellness and Spa Vouchers
                            Travel Vouchers
                            Wellness and Spa Vouchers
                            Wellness and Spa Vouchers
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    



  <!-- Script to handle real-time updates -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/leaderboard.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

